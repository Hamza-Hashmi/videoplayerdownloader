<com.facebook.ads.NativeAdLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/nativeAdLayoutFb"
    app:cardCornerRadius="@dimen/_4sdp"
    android:layout_height="@dimen/_75sdp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/homeBan_layoutFbContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <com.facebook.ads.MediaView
            android:id="@+id/fbMediaView"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/tvFbAdLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top"
            android:background="#85F5F5F5"
            android:paddingStart="@dimen/_1sdp"
            android:paddingEnd="@dimen/_1sdp"
            android:text="AD"
            app:layout_constraintLeft_toRightOf="@id/fbMediaView"
            app:layout_constraintRight_toLeftOf="@id/btnFbAdCallToAction"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_9ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivFbAdIcon"
            android:textStyle="bold"
             />

        <ImageView
            android:id="@+id/ivFbAdIcon"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_margin="@dimen/_3sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@+id/fbMediaView"
            app:layout_constraintTop_toTopOf="@+id/fbMediaView" />

        <Button
            android:id="@+id/btnFbAdCallToAction"
            android:layout_width="0dp"
            android:layout_height="@dimen/_28sdp"
            android:layout_alignParentTop="true"

            android:layout_alignParentEnd="true"
            android:gravity="center"
            app:backgroundTint="@null"
            android:background="@drawable/ad_button_bg"
            android:layout_marginStart="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:paddingStart="@dimen/_2sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:text="Install Now "
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_11ssp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/fbMediaView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fbMediaView"  />

        <TextView
            android:id="@+id/tvFbAdTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_toStartOf="@+id/btnFbAdCallToAction"
            android:layout_toEndOf="@+id/ivFbAdIcon"
            android:paddingStart="@dimen/_4sdp"
            android:paddingEnd="@dimen/_4sdp"
            android:text="Uber Taxifdsf"
            android:textAllCaps="false"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_11sdp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivFbAdIcon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvFbAdBody"
            app:layout_goneMarginTop="@dimen/_4sdp" />


        <TextView
            android:id="@+id/tvFbAdBody"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/llAdChoiceContainer"
            android:gravity="start"
            android:maxLines="1"
            app:layout_constraintBottom_toTopOf="@id/btnFbAdCallToAction"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:text="Feel free to explain the world   with us."
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_9sdp"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@+id/ivFbAdIcon"
            app:layout_constraintTop_toBottomOf="@+id/tvFbAdTitle" />

        <LinearLayout
            android:id="@+id/llAdChoiceContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_2sdp"
            android:elevation="@dimen/_2sdp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.facebook.ads.NativeAdLayout>

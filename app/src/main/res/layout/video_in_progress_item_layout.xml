<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="@dimen/_8sdp"
        android:paddingHorizontal="@dimen/_8sdp"
        android:background="@color/video_download_fragment_main_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <ImageView
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_70sdp"
            android:id="@+id/imgVideo"
            android:background="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ll"
            app:layout_constraintLeft_toRightOf="@id/imgVideo"
            app:layout_constraintRight_toLeftOf="@id/btnPause"
            app:layout_constraintTop_toTopOf="@id/imgVideo"
            android:layout_marginHorizontal="@dimen/_12sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvVideoName"
                android:text="Video Name"
                android:singleLine="true"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/dark_gray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvVideoSize"
                android:text="10MB"
                android:textColor="@color/video_size_text_color"
                android:singleLine="true"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/_10ssp"/>
            <TextView
                android:id="@+id/tvVideoIsPaused"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_medium"
                android:lines="1"
                android:text="video is paused"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_11sdp"
                android:layout_centerVertical="true"
                android:visibility="gone"
                />

        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancel"
            android:src="@drawable/cancelvideo"
            app:layout_constraintTop_toTopOf="@id/ll"
            app:layout_constraintBottom_toBottomOf="@id/ll"
            app:layout_constraintRight_toRightOf="parent"
           />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnPause"
            android:src="@drawable/videopauseicon"
            app:layout_constraintRight_toLeftOf="@id/btnCancel"
            app:layout_constraintTop_toTopOf="@id/btnCancel"
            app:layout_constraintBottom_toBottomOf="@id/btnCancel"
            android:layout_marginRight="@dimen/_8sdp"/>

        <ProgressBar
            android:id="@+id/videoProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:indeterminateDrawable="@drawable/video_in_progress"
            android:progressDrawable="@drawable/progress_bar_style"
            android:indeterminateDuration="1000"
            android:indeterminateOnly="false"
            android:max="100"
            android:layout_marginHorizontal="@dimen/_8sdp"
            app:layout_constraintBottom_toBottomOf="@id/imgVideo"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/imgVideo"
            app:layout_constraintTop_toBottomOf="@+id/ll"/>
        <TextView
            android:id="@+id/internetspeed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_medium"
            android:lines="1"
            android:text="0"
            android:visibility="invisible"
            android:textColor="@color/primary_color"
            android:textSize="@dimen/_11sdp"
            android:layout_marginHorizontal="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@+id/videoProgressBar"
            app:layout_constraintLeft_toRightOf="@id/imgVideo"
            app:layout_constraintRight_toRightOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
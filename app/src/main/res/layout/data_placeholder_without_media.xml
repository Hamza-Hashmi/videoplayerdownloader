<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:shimmer_duration="800"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ssdds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >


        <View
            android:layout_margin="@dimen/_5sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/icon111"
            android:background="@color/background"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_64sdp"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/break_image"
            android:visibility="visible" />



        <View
            android:layout_width="1sp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/icon111"
            app:layout_constraintBottom_toBottomOf="@id/icon111"
            app:layout_constraintLeft_toRightOf="@id/icon111"
            android:layout_marginLeft="@dimen/_4sdp"
            android:background="#D3D3D3"
            android:id="@+id/v"/>

        <View
            android:layout_width="19dp"
            android:layout_height="26dp"
            android:background="@color/background"
            app:layout_constraintLeft_toRightOf="@id/v"
            app:layout_constraintTop_toTopOf="@id/v"
            app:layout_constraintBottom_toTopOf="@id/actionButton"
            android:layout_marginLeft="@dimen/_5sdp"
            android:id="@+id/icon111ss"/>
        <View
            android:layout_marginStart="@dimen/_5sdp"
            android:id="@+id/headerllll"
            android:background="@color/background"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_10sdp"
            app:layout_constraintLeft_toRightOf="@id/icon111ss"
            app:layout_constraintTop_toTopOf="@id/icon111" />

        <View

            android:layout_marginStart="@dimen/_3sdp"
            android:id="@+id/bodyyy"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:gravity="bottom"
            android:background="@color/background"
            android:visibility="visible"
            app:layout_constraintLeft_toRightOf="@id/lbllll"
            app:layout_constraintTop_toBottomOf="@+id/headerllll"
            />

        <View
            android:id="@+id/actionButton"
            android:layout_width="0dp"
            android:paddingStart="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            app:layout_constraintLeft_toRightOf="@id/v"
            app:layout_constraintRight_toRightOf="parent"
            app:cornerRadius="@dimen/_3sdp"
            android:background="@color/background"
            android:layout_height="@dimen/_28sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bodyyy"
            />

        <View
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:id="@+id/lbllll"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:contentDescription="@string/break_image"
            android:gravity="center"
            android:background="@color/background"
            android:padding="@dimen/_2sdp"
            app:layout_constraintTop_toBottomOf="@id/headerllll"
            app:layout_constraintLeft_toRightOf="@id/icon111ss"
            />




    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>